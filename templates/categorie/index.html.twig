{% extends 'dashboard.html.twig' %}

{% block title "Categories" %}

{% block body %}

	<div class="main-content">
		<main>

			<div class="row pt-5">

				<div class="col-7">
					<div class="">
						<div class="d-flex p-3 justify-content-between bo_ba align-items-center">
							<h6>Tous les categories</h6>
							<form method="post" class="w-50">

								<input type="text" name="search_categorie" width="100px" class='form-control' placeholder="Tapez le nom et entrez">
							</form>

						</div>
						<div class="p-3">
							<table class=" table table-borderless text-center pe-3">
								<thead class="bo_ba">
									<tr>
										<th>Id</th>
										<th>Nom</th>
										<th>Photo</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for categorie in categories %}
										<tr>
											<td>{{ categorie.id }}</td>
											<td>{{ categorie.nomCate }}</td>
											<td>
												<img src="/asset/upload/product/{{categorie.imageCate}}" width:"60px" height="60px" alt="" srcset="">
											</td>

											<td>
												<div class="d-flex justify-content-center align-items-center m-0">

													<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">

														<button class="btn btn-sm brc btn-outline-warning">
															<i class="bi-eye-fill"></i>
														</button>

													</a>
													<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">
														<button class="btn btn-sm brc btn-outline-primary">
															<i class="bi-pencil-square"></i>
														</button>

													</a>
												</div>
											</td>
										</tr>

									{% endfor %}
								</tbody>
							</table>
							<nav aria-label="Page navigation example" class="mt-5 text-center">
								<ul class="pagination text-center">
									<li class="page-item">
										<a class="page-link" href="#" aria-label="Previous">
											<span aria-hidden="true">&laquo;</span>
										</a>
									</li>
									{% for item in 1..((counts / limit)|round(0, 'ceil') ) %}

										<li class="page-item {{(page == item)? " active":" "}}">
											<a class="page-link" href="?page={{item}}">{{item}}</a>
										</li>
									{% endfor %}

									<li class="page-item">
										<a class="page-link" href="#" aria-label="Next">
											<span aria-hidden="true">&raquo;</span>
										</a>
									</li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
				<div class="col-5 ">
					<div class="">
						<div class="bbw p-3">
							<h6>Ajoute une nouvelle categorie</h6>
						</div>
						<div class="p-3">
							{{ include('categorie/_form.html.twig') }}
						</div>
					</div>

				</div>
			</div>
		</main>
	</div>


{% endblock %}
