{% extends 'dashboard.html.twig' %}

{% block title 'Commentaires' %}

{% block body %}
	<div class="main-content">
		<main>
			<div class="bus">

				<div class="p-3 bbw ">
					<h5>Avis sur le blog</h5>
				</div>
				<div class="p-3  ">

					<div class=" bbw pe-3 pb-3 d-flex justify-content-between  align-items-center">
						<h5>Avis sur le blog</h5>
						<div class="d-flex">
							<input type="text" class="form-control" placeholder="Tapez le nom et entrez">

						</div>
					</div>

					<table class="table p-4 mt-3 text-center">
						<thead class="fs-6">
							<tr>
								<th>#</th>
								<th class="text-start ps-5">blog</th>
								<th class="text-start">Client</th>
								<th>Commenter</th>
								<th>Publier</th>

							</tr>
						</thead>
						<tbody>
							{% for commentaire in commentaires %}
								<tr>
									<td>{{ commentaire.id }}</td>

									<td>
										<div class="d-flex  ps-4 pe-0 m-0  align-items-center">

											<img src="/asset/upload/product/{{commentaire.blog.imageBog}}" width:"60px" height="60px" alt="" srcset="">
											{{commentaire.blog.titreBlog}}
										</div>
									</td>

									<td>
										<div class="info  text-start">
											<span>Nom :
												{{commentaire.users.prenomUser}}
												<br>
												Email :
												{{commentaire.users.email}}
												<br>
												TÃ©l :
												{{commentaire.users.numberPhone}}
												<br>
												Evaluation:
												<small class="text-warning">
													<i class="bi-star-fill"></i>
													<i class="bi-star-fill"></i>
													<i class="bi-star-fill"></i>
													<i class="bi-star-half"></i>
													<i class="bi-star"></i>
												</small>

											</span>

										</div>
									</td>
									<td>
										{{commentaire.commentaire}}
									</td>

									<td>
										{% if commentaire.isPublier == true %}

											<a href="{{path("app_status",{id:commentaire.id})}}">

												<span class="text-success fs-3">
													<i class="bi-toggle-on"></i>
												</span>
											</a>
										{% else %}
											<a href="{{path("app_status",{id:commentaire.id})}}">

												<span class="text-success fs-3">
													<i class="bi-toggle-off"></i>
												</span>
											</a>

										{% endif %}
									</td>


								</tr>
							{% else %}
								<tr>
									<td colspan="10">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</main>

	</div>


{% endblock %}
