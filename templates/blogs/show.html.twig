{% extends 'dashboard.html.twig' %}

{% block title blog.titreBlog %}

{% block body %}
	<div class="main-content">
		<main>
			<div class="bus">

				<div class="pro-image d-flex p-4 align-items-center">
					<div class="">
						<img src="/asset/upload/product/{{blog.imageBog}}" width="200px" height="200px" alt="" srcset="">

					</div>
					<div class=" ms-5">
						<h4>{{blog.titreBlog}}</h4>
						<span>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star"></i>
						</span>
						<div class="d-flex mt-3">
							<div class="var p-1 text-start">
								<span class="fs-5 fw-bold">{{blog.commentaireBlogs|length}}</span><br>
								<small>Commantaires</small>
							</div>
							<div class="var p-1 text-start">

								<span class="fs-5 fw-bold">{{blog.wishlists|length}}</span><br>
								<small>Nombre de Like</small>
							</div>
							<div class="var p-1 text-start">

								<span class="fs-5 fw-bold">2</span><br>
								<small>Nombre de share</small>
							</div>
						</div>
					</div>

				</div>
				<div class="row">
					<div class="col-4">
						<div class="info_produit p-3 ">
							<div class="dja ">
								<p>Status</p>
								<p>
									{% if blog.isPublier == true %}
										<span class="badge bg-success">Publier</span>
									{% else %}
										<span class="badge bg-danger">Non publier</span>

									{% endif %}

								</p>
							</div>
							<div class="dja">
								<p>Commentaires</p>
								<p>
									<span class="badge bg-success">{{blog.commentaireBlogs|length}}</span>
								</p>
							</div>
							<div class="dja">
								<p>Total de like</p>
								<p>
									<span class="badge bg-success">{{blog.wishlists|length}}</span>
								</p>
							</div>
							<div class="dja">
								<p>Auteur :</p>
								<p>
									<span class="fw-bold text-secondary">{{blog.user.fullName}}</span>
								</p>
							</div>
							<div class="dja">
								<p>Date de cr√©ation :</p>
								<p>
									<span class="fw-bold text-secondary">{{blog.createdAt|date("d-m-Y H:i")}}</span>
								</p>
							</div>


						</div>

					</div>
					<div class="col-8 ">
						<div class="info_produit p-3">
							<h6>Edit Blog</h6>

							{{ include('blogs/_form.html.twig', {'button_label': 'Modifier'}) }}
						</div>

					</div>

					<div class="info_produit mt-5 p-3">
						<div class="bbw">
							<h6>Galerie</h6>
						</div>
						<div class="text-center pt-4 w-100">

							<img src="/asset/upload/product/{{blog.imageBog}}" width:"100%" height="400px" alt="" srcset="">
						</div>
					</div>

					<div class="info_produit mt-5 p-3">
						<div class="bbw">
							<h6>Description de
								{{blog.titreBlog}}</h6>
						</div>
						<div class=" pt-4 w-100">
							<p>{{blog.descriptionBlog}}</p>
						</div>
					</div>

				</div>
			</div>
		</main>
	</div>
{% endblock %}
