{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container rm mt">
		<div class="row">
			<div class="col-md-6 mx-auto">

				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				<h3 class="text-center mb-3">Creation du compte</h3>

				{{ form_start(registrationForm) }}
				<div class="row">
					<div class="col-6">
						{{ form_row(registrationForm.nomUser ,{
                            label:'Nom'
                        }) }}
					</div>
					<div class="col-6">
						{{ form_row(registrationForm.prenomUser,{
                            label:'Prenom'
                        }) }}
					</div>
				</div>
				<div class="row">
					<div class="col-6">
						{{ form_row(registrationForm.numberPhone,{
					label:'Numéro de Téléphone'
				}) }}
					</div>
					<div class="col-6">{{form_row(registrationForm.imageUser)}}</div>
				</div>
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn btn-warning w-100" formnovalidate>Enregistrer</button>
				<p class="text-center mt-3">vous avez déja une compte ?
					<a href="{{path("app_login")}}">Login</a>
				</p>
				{{ form_end(registrationForm) }}
			</div>

		</div>
	</div>
{% endblock %}
