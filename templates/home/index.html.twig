						<a href="#" class="list-group-item list-group-item-action list-group-item-primary">{{categorie.nomCate}}</a>
					{% endfor %}

				</div>
			</div>
			<div class="col-9 d-flex  " style="flex-direction:column">

				<div class="ps-5 pt-5 pb-5 ">
					<h3 class="mb-0 fs-6">SPRING 2022</h3>
					<h1>WOMAN FASHION</h1>
					<p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
					<button type="submit" class="btn btn-primary">SHOP NOW</button>
				</div>
				<div class="d-flex justify-content-between pt-1 ps-5 pe-5 pb-0 bg-primary w-100" style="align-items:center">
					<div class="text-center pt-2 ps-3 pe-3 pb-1">
						<h3 class="fs-5 mb-0">SPRING 2022</h3>
						<p>Lorem ipsum dolor sit amet
						</p>
					</div>
					<div class="text-center pt-1 ps-1 pe-1 pb-1">
						<h3 class="fs-5 mb-0">SPRING 2022</h3>
						<p>Lorem ipsum dolor sit a
						</p>
					</div>
					<div class="text-center pt-1 ps-1 pe-1 pb-1">
						<h3 class="fs-5 mb-0">SPRING 2022</h3>

						<p>Lorem ipsum dolor sit amet
						</p>
					</div>

				</div>
			</div>
		</div>
		<div class="row mt-3">

			<div class="row mt-3">
				<div class="col-3">
					<div class="panel panel-primary">
						<div class="bg-white p-2 d-flex justify-content-between hot-deals">
							<h4 class="fs-6">TODAY OFFER</h4>
							<div>
								<span class="fs-6">
									<i class="fs-6 bi-chevron-left"></i>
									<i class="fs-6 bi-chevron-right"></i>
								</span>
							</div>
						</div>
						<div class="panel-body product-container bg-white">
							<div class="product-card mt-1 pe-5">
								<div class="product-image ">
									<span class="discount-tag">-50%</span>
									<img src="./asset/upload/product/ecommerce.png" class="product-dump" alt="">
									<button class="card-btn">Add to cart</button>
								</div>
								<div class="product-info p-2 mb-0">
									<h4 class="product-title">Iphone</h4>
									<p class="pt-0 text-warning">
										<i class="bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star"></i>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-9">

					<div class="liste-comerce d-flex justify-content-between">
						<div class="new">
							<h6>Nouveau produit</h6>
						</div>
						<div class="new">
							<h6>Meilleur produit</h6>
						</div>
						<div class="new">
							<h6>Futur produit</h6>
						</div>
					</div>

					<div class="d-grid">

						{% for produit in produits %}

							<div class="product-card bg-white box">

								<div class="product-image pt-2 pb-1 pe-2 ps-2 ">

									<a href="{{path("app_produit_show",{id:produit.id})}}">
										<img src="./asset/upload/product/{{produit.imagePro}}" class="product-dump" alt="">

									</a>


								</div>
								<div class="cart-flex d-flex">

									<div class="product-info p-2">
										<h4 class="product-title">{{produit.nomPro}}</h4>
										<p class="text-warning">
											<i class="bi-star-fill"></i>
											<i class="bi bi-star-fill"></i>
											<i class="bi bi-star-fill"></i>
											<i class="bi bi-star-fill"></i>
											<i class="bi bi-star"></i>
										</p>
										<span class="product-price fs-6">{{produit.prixPro}}</span>
										<span class="product-price-act fs-6">{{produit.prixPro}}</span>
									</div>
									<div class="cart-panier pe-5 texte-center">
										<span>
											<a href="{{path("add_cart",{id:produit.id})}}">

												<i class="bi-cart-plus-fill"></i>
											</a>
										</span>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>


				</div>


			</div>
		</div>
	</div>
{% endblock %}
