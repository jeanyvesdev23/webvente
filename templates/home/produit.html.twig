{% extends 'base.html.twig' %}

{% block title 'All produit' %}

{% block body %}
	<div class="container " style="margin-top:11rem">
		<div class="row">
			<div class="col-3">
				<div class="list-group">
					<a href="#" class="list-group-item list-group-item-action">CATHEGORIES
					</a>
					{% for categorie in categories %}

						<a href="#" class="list-group-item list-group-item-action list-group-item-primary">{{categorie.nomCate}}</a>
					{% endfor %}

				</div>
			</div>
			<div class="col-9 top-product">

				<div class="liste-comerce top d-flex justify-content-between">
					<div class="new">
						<h6>Nouveau produit</h6>
					</div>
					<div class="new">
						<h6>Meilleur produit</h6>
					</div>
					<div class="new">
						<h6>Futur produit</h6>
					</div>
				</div>

				<div class="liste-produit">

					{% for produit in produits %}

						<div class="product-card  m-1 bg-white box">
							<div class="product-image p-2 text-center">
								<a href="{{path("app_produit_show",{id:produit.id})}}">
									<img src="./asset/upload/product/{{produit.imagePro}}" class="product-dump" alt="">
								</a>
							</div>
							<div class="cart-flex ">
								<div class="product-info p-2">
									<h4 class="product-title fs-5">{{produit.nomPro}}</h4>
									<span class="badge bg-danger mt-0">{{produit.categorie}}</span><br>
									<span class="text-warning fs-6 pb-0">
										<i class="bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star"></i>
									</span>
								</div>
								<div class="d-flex justify-content-between align-items-center">
									<div class="fw-bold fs-6 ps-2">

										<span class="product-price ">{{produit.prixPro}}
											Ar</span>
										{% if produit.autrePrix != null %}
											<span class="opacity-50 text-decoration-line-through">{{produit.autrePrix}}
												Ar</span>
										{% endif %}
									</div>
									<div class="cart-panier pe-3 ">
										<span>
											<a href="{{path("add_cart",{id:produit.id})}}">

												<i class="bi-cart-plus-fill"></i>
											</a>
										</span>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>


			</div>

		</div>
	</div>
{% endblock %}
