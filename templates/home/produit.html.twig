{% extends 'base.html.twig' %}

{% block title 'All produit' %}

{% block body %}
	<div class="container " style="margin-top:11rem">
		<div class="row">
			<div class="col-3">
				<div class="list-group">
					<a href="#" class="list-group-item list-group-item-action">CATHEGORIES
					</a>
					{% for categorie in categories %}

						<a href="#" class="list-group-item list-group-item-action list-group-item-primary">{{categorie.nomCate}}</a>
					{% endfor %}

				</div>
			</div>
			<div class="col-9">

				<div class="liste-comerce d-flex justify-content-between">
					<div class="new">
						<h6>Nouveau produit</h6>
					</div>
					<div class="new">
						<h6>Meilleur produit</h6>
					</div>
					<div class="new">
						<h6>Futur produit</h6>
					</div>
				</div>

				<div class="d-grid">

					{% for produit in produits %}

						<div class="product-card bg-white box">

							<div class="product-image pt-2 pb-1 pe-2 ps-2 ">

								<a href="{{path("app_produit_show",{id:produit.id})}}">
									<img src="./asset/upload/product/{{produit.imagePro}}" class="product-dump" alt="">

								</a>


							</div>
							<div class="cart-flex d-flex">

								<div class="product-info p-2">
									<h4 class="product-title">{{produit.nomPro}}</h4>
									<p class="text-warning">
										<i class="bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star-fill"></i>
										<i class="bi bi-star"></i>
									</p>
									<span class="product-price fs-6">{{produit.prixPro}}</span>
									<span class="product-price-act fs-6">{{produit.prixPro}}</span>
								</div>
								<div class="cart-panier pe-5 texte-center">
									<span>
										<a href="{{path("add_cart",{id:produit.id})}}">

											<i class="bi-cart-plus-fill"></i>
										</a>
									</span>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>


			</div>

		</div>
	</div>
{% endblock %}
