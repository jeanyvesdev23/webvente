{% extends 'base.html.twig' %}

{% block title 'My wishlist' %}

{% block body %}
	<div class="container" style="margin-top:160px">
		<div class="compte-user row">
			<div class="col-3">
				{% include "./partial/_compteuser.html.twig" %}
			</div>
			<div class="p-3 col-9 br">
				<div class="fav">
					<h5 class="p-1 fs-5">Mon produit prefefer</h5>
				</div>
				<div class="liste-top">

					{% for favorite in fav_produit %}
						<a class="d-flex wm justify-content-center align-items-center bg-white" href="{{path("app_produit_show",{id:favorite.id})}}">
							<img src="../../asset/upload/product/{{favorite.imagePro}}" width="150px" heigth="200px" alt="">
							<div>
								<h4 class="product-title fs-5">{{favorite.nomPro}}</h4>
								<span class="text-warning fs-6 pb-0">
									<i class="bi-star-fill"></i>
									<i class="bi bi-star-fill"></i>
									<i class="bi bi-star-fill"></i>
									<i class="bi bi-star-fill"></i>
									<i class="bi bi-star"></i>
								</span>
								<div class="fw-bold fs-6 ps-2">

									<span class="product-price ">{{favorite.prixPro}}
										Ar</span>

								</div>
							</div>

						</a>
					{% else %}
						<div>
							<p>Pour avoir le produit preferer il faut apuyer sur le
								<i class="bi-heart"></i>
							</p>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
