{% extends 'base.html.twig' %}

{% block title 'Mes commandes' %}

{% block body %}
	<div class="container" style="margin-top:200px">
		<div class=" row">
			<div class="col-9 mx-auto">

				<div class="commande-id bg-white p-3" style='border-radius:5px '>
					<div class="d-flex justify-content-between me-5 ms-5">
						<h4>Commande #id</h4>
						<div class="info-commande text-end">

							<p class="mb-0">date de cration</p>
							<p class="mb-0">date d'arriver</p>
							<p class="mb-0">client</p>
							<p class="mb-0">telephone</p>
							<p class="mb-0">quantiter</p>
							<p>Total</p>
						</div>
					</div>
					<div class="d-flex justify-content-between  me-5 ms-5 text-center">
						<div>
							<h4 class="fs-5">COMMANDE EFFECTUEE</h4>
						</div>
						<div>
							<h4 class="fs-5">EN COURS D'EXPEDITION</h4>
						</div>
						<div>
							<h4 class="fs-5">EN COURS DE LIVRAISON</h4>
						</div>
						<div>
							<h4 class="fs-5">COMMANDE LIVREE</h4>
						</div>

					</div>
					<button class="btn btn-dark w-100">ANNULER LA COMMANDE</button>
				</div>
				<div class="liste-produi ">
					{% for panier in panier %}

						<div class="row m-5">

							<div class="image-product col-4">
								<img src="/asset/upload/product/{{panier.imageProduct}}" width:"300px" height="300px" alt="" srcset="">

							</div>
							<div class="info-product col-8 text-center">
								<h6>commande #id</h6>
								<h5>nom de produit</h5>
								<p>descriptionde produit</p>
								<p>prix et date de creation</p>
								<button>Commande effectuee</button>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
