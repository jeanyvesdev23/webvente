{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row">
			<ul class="list-group  col-md-3">
				<li class="list-group-item list-group-item-action list-group-item-warning">
					<i class="bi-card-heading"></i>
					Category</li>
				{% for category in categories %}
					<li class="list-group-item d-flex justify-content-between align-items-start">
						<div class="ms-2 me-auto">
							<div class="fw-bold">{{category.nameCategory}}</div>
						</div>
						<span class="badge bg-primary rounded-pill">14</span>
					</li>
				{% endfor %}


			</ul>
			<div class="col-md-9 d-flex justify-content-between ">
				{% for product in products %}
					<div class="card display-inline-block me-3 mb-3" style="width: 18rem;">
						<img src="..." class="card-img-top" alt="...">
						<div class="card-body mb-1">
							<h5 class="card-title">{{product.nameProduct}}</h5>
							<p class="text-warning">
								<i class="bi-star-fill"></i>
								<i class="bi-star-fill"></i>
								<i class="bi-star-fill"></i>
								<i class="bi-star"></i>
								<i class="bi-star"></i>
							</p>
							<p class="card-text">{{product.priceProduct}}
								Ar</p>
							<div class="d-flex justify-content-between">
								<button type="button" class="btn btn-outline-info">Plus d'info</button>
								<a href="{{path("app_add_cart",{id:product.id})}}">
									<button type="button" class="btn btn-outline-warning">Add to cart</button>
								</a>
							</div>


						</div>
					</div>
				{% endfor %}
			</div>
		</div>


	</div>
{% endblock %}
