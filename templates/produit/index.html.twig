{% extends 'dashboard.html.twig' %}

{% block title 'All produit' %}

{% block body %}
	<div class="main-content">
		<main>
			<div class="prod d-flex justify-content-between pt-4 align-items-center">
				<h5>Tous les produits</h5>
				<a href="{{path("app_produit_new")}}">
					<button class="btn btn-warning">Ajouter un nouveau produit</button>
				</a>
			</div>
			<div class="bsw mt-1">

				<div class="prod d-flex justify-content-between p-3 mt-0 align-items-center">
					<h5>Tous les produits</h5>
					<div>
						<input type="text">
						<input type="text">
					</div>
				</div>

				<table class="table table-striped text-center">
					<thead class="fs-6">
						<tr>
							<th>#</th>
							<th>Nom</th>
							<th>Info</th>
							<th>Categorie</th>
							<th>Marque</th>
							<th>Publier</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for produit in produits %}
							<tr>
								<td>{{ produit.id }}</td>
								<td>
									<div class="d-flex  ps-4 pe-0 m-0  align-items-center">

										<img src="/asset/upload/product/{{produit.imagePro}}" width:"60px" height="60px" alt="" srcset="">
										{{produit.nomPro}}
									</div>
								</td>
								<td>
									<div class="info">
										<p>Evaluation:
											<span>
												<i class="bi-star-fill"></i>
												<i class="bi-star-fill"></i>
												<i class="bi-star-fill"></i>
												<i class="bi-star-half"></i>
												<i class="bi-star"></i>
											</span>
											<br>Total vendu :
											<br>
											Prix:
											{{ produit.prixPro }}</p>

									</div>
								</td>
								<td>
									<span class="badge bg-secondary">{{produit.categorie}}</span>
								</td>
								<td>marque</td>
								<td>
									<span class="text-success fs-3">
										<i class="bi-toggle-on"></i>
									</span>
								</td>

								<td>
									<div class="d-flex justify-content-center align-items-center m-0">

										<a href="{{ path('app_produit_show2', {'id': produit.id}) }}">

											<button type="button" class="btn brc btn-outline-warning">
												<i class="bi-eye-fill"></i>
											</button>

										</a>
										<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">
											<button type="button" class="btn brc btn-outline-primary">
												<i class="bi-pencil-square"></i>
											</button>

										</a>
										{{ include('produit/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="10">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</main>

	</div>


{% endblock %}
