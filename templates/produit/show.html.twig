{% extends 'dashboard.html.twig' %}

{% block title"Show produit" %}

{% block body %}
	<div class="main-content">
		<main>
			<div class="bus">

				<div class="pro-image d-flex p-4 align-items-center">
					<div class="">
						<img src="/asset/upload/product/{{produit.imagePro}}" width:"200px" height="200px" alt="" srcset="">

					</div>
					<div class=" ms-5">
						<h4>{{produit.nomPro}}</h4>
						<span>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star-fill"></i>
							<i class="bi-star"></i>
						</span>
						<div class="d-flex mt-3">
							<div class="var p-1 text-start">
								<span class="fs-5 fw-bold">{{countComm}}</span><br>
								<small>Commantaires</small>
							</div>
							<div class="var p-1 text-start">

								<span class="fs-5 fw-bold">{{produit.stock}}</span><br>
								<small>Stock</small>
							</div>
							<div class="var1 p-1 text-start text-white">
								<span class="fs-5 fw-bold">{{totalVendu}}
									Ar
								</span>
								<small class="opacity-50">Montant vendu
									<br>
									lastTime 2022/04/12 21:34:21</small>

							</div>
						</div>
					</div>

				</div>
				<div class="row">
					<div class="col-4">
						<div class="info_produit p-3 ">
							<div class="dja ">
								<p>status</p>
								<p>
									{% if produit.status == true %}
										<span class="badge bg-success">publier</span>
									{% else %}
										<span class="badge bg-danger">non publier</span>

									{% endif %}
								</p>
							</div>
							<div class="dja">
								<p>Marque</p>

								<img src="../../asset/upload/product/{{produit.marque.imageMarque}}" width="50px" height="50px" alt="" srcset="">

							</div>
							<div class="dja mt-1">
								<p>Categorie</p>
								<p>
									<span class="badge bg-success">{{produit.categorie}}</span>
								</p>
							</div>
							<div class="dja">
								<p>garantie</p>
								<p>
									<span class="badge bg-success">à la garantie</span>
								</p>
							</div>
							<div class="dja">
								<p>Quantité d'achat minimum</p>
								<p>1</p>
							</div>
							<div class="dja">
								<p>Quantité d'achat maximum</p>
								<p>10</p>
							</div>

						</div>
						<div class="info_produit mt-5 p-3">
							<div class="bbw">
								<h6>Taxe sur le valeur ajouter</h6>
							</div>
							<div class="pt-3">
								<table class="table table-bordered">

									<tr>
										<td>GST</td>
										<td>0.23</td>
									</tr>
									<tr>
										<td>TAX</td>
										<td>0.9</td>
									</tr>
								</table>
							</div>


						</div>
					</div>
					<div class="col-8 ">
						<div class="info_produit p-3">
							<div class="bbw">
								<h6>Prix produit et stock</h6>
							</div>
							<div class="p-3">
								<table class="table table-bordered">

									<tr>
										<td>Prix</td>
										<td>Stock</td>
									</tr>
									<tr>
										<td class="fw-bold">{{produit.prixPro}}
											Ar</td>
										<td>
											{% if produit.stock %}
												<span class="fw-bold">
													En stock
												</span>
											{% else %}
												<span class='text-danger'>
													En cours d'approvisionnement
												</span>
											{% endif %}
										</td>
									</tr>
								</table>
							</div>
						</div>
						<div class="info_produit mt-5 p-3">
							<div class="bbw">
								<h6>Galerie</h6>
							</div>
							<div class="text-center pt-4 w-100">

								<img src="/asset/upload/product/{{produit.imagePro}}" width:"100%" height="400px" alt="" srcset="">
							</div>
						</div>
					</div>
					<div class=" m-3 p-3">
						<div class="bbw">
							<h6>Description du produit
								{{produit.nomPro}}</h6>
						</div>
						<div class="pt-4 ">

							<p>{{produit.descriptionPro}}</p>

						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
