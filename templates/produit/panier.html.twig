{% extends "base.html.twig" %}

{% block title 'Mon cart' %}

{% block body %}
	<h1>Mon panier</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Quantity</th>
				<th>Prix</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		{% for item in items %}


			<tbody>
				<tr>
					<td>{{item.produit.nom}}</td>
					<td>{{item.quantity}}</td>
					<td>{{item.produit.prix}}</td>
					<td>{{item.quantity * item.produit.prix}}</td>
					<td>
						<a href="{{path("app_remove_cart",{id:item.produit.id})}}">Remove</a>
					</td>
				</tr>
			</tbody>


		{% endfor %}
		<tfoot>
			<tr>
				<td></td>
				<td></td>
				<td class="text-right">Total :</td>
				<td>{{total}}</td>
				<td></td>
			</tr>
		</tfoot>

	</table>
{% endblock %}
