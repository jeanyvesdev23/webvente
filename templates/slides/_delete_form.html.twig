<form method="post" action="{{ path('app_slides_delete', {'id': slide.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ slide.id) }}">
	<button class="btn btn-sm brc btn-outline-danger">
		<i class="bi-trash-fill"></i>
	</button>
</form>
