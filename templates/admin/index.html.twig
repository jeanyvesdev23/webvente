{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
	<div>
		<h1>{{pluralize(produits|length, 'Produit')}}
		</h1>
		{% for produit in produits %}
			<article>
				<h3>
					<a href="{{path('app_show_produit', {id:produit.id})}}">{{produit.nom}}</a>

				</h3>
				<p>{{produit.prix}}
				</p>
			</article>
		{% endfor %}
	</div>
{% endblock %}
