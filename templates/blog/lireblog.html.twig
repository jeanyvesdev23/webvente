{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}
	<div class="container mt">
		<div class="centre-blog-show">
			<div class="image-show p-3">
				<img src="/asset/upload/product/{{blog.imagebog}}" class="w-100" height="300px" alt="" srcset="">
			</div>
			<div class="show-info ps-4">
				<h3>{{blog.titreBlog}}</h3>
				<p>{{blog.descriptionBlog}}</p>
				<p>Crée le
					{{blog.createdAt|date("d-m-Y H:i")}}
					<span>par
						{{blog.user.fullName}}</span>
				</p>

			</div>
			<div class="d-flex justify-content-center align-items-center">
				<div class="p-1 me-3">
					<span class="pe-1">
						<i class="bi-hand-thumbs-up-fill"></i>
						<small class="ps-1">54</small>
					</span>
				</div>
				<div class="p-1 me-3">
					<span class="pe-1">
						<i class="bi-chat-left-dots"></i>
						<small class="ps-1">{{counts}}</small>
					</span>
				</div>
				<div class="p-1 me-3">
					<span class="pe-1">
						<i class="bi-share"></i>
						<small class="ps-1">54</small>
					</span>
				</div>
			</div>


		</div>
		<div class="rox text-center mt-4">
			<div class="col-8 mx-auto">
				{% if app.user %}
					{% if commentaire|length > 0  %}

						<div class="d-flex p-4 justify-content-between align-items-center">
							{% for commentaire in commentaire %}
								<div class="commentaire d-flex">
									<img src="/asset/upload/product/{{commentaire.users.imageUser}}" class="brce" width="80px" height="80px" alt="">
									<span>{{commentaire.users.prenomUser}}
										<br>
										{{commentaire.commentaire}}
										<br><span class="text-warning">
											<i class="bi-star-fill"></i>
											<i class="bi-star-fill"></i>
											<i class="bi-star-fill"></i>
											<i class="bi-star-fill"></i>
											<i class="bi-star-fill"></i>
										</span>
										<br><p>
											Crée le
											{{commentaire.createdAt|date("d-m-Y H:i")}}
										</p>
									</span>
								</div>
							{% endfor %}
						</div>
					{% endif %}

					<div class="form mt-3">
						{{form_start(form)}}
						{{form_widget(form)}}
						<button class="btn btn-sm w-50 btn-warning" formnovalidate>commenter</button>
						{{form_end(form)}}
					</div>
				{% endif %}
			</div>
		</div>


	</div>
{% endblock %}
